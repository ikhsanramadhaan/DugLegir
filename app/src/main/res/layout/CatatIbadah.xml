<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context="com.example.ikhsanramadhan.duglegir.Main2Activity">
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        android:src="@drawable/Khanakaba2"/>
    <LinearLayout
            android:id="@+id/catat"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHALAT DZUHUR"
                android:textColor="#000"
                android:textSize="35sp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.01"
                android:textColor="#000"
                android:textSize="35sp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4D000000"
                android:gravity="center">
            <CheckBox
                android:gravity="center_horizontal"
                android:buttonTint="#fff"
                android:textColor="#fff"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="berjamaah"/>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar">
        <TextView
            android:id="@+id/arab1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textSize="25sp"
            android:paddingLeft="16dp"
            android:textColor="@android:color/black"
            android:text="الْعَهْدُ الَّذِى بَيْنَنَا وَبَيْنَهُمُ الصَّلاَةُ فَمَنْ تَرَكَهَا فَقَدْ كَفَر"/>
        <TextView
            android:layout_below="@id/arab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="“Perjanjian antara kami dan mereka (orang kafir) adalah shalat. Barangsiapa meninggalkannya maka dia telah kafir.” (HR. Ahmad, Tirmidzi, An Nasa’i, Ibnu Majah. Dikatakan shohih oleh Syaikh Al Albani. Lihat Misykatul Mashobih no. 574)
"/>
        <Button
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:textColor="#000"
            android:background="#4D000000"
            android:text="SUBMIT"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>
